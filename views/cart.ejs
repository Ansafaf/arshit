<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart - Arshit Traders</title>
    <link rel="icon" type="assets/images/png" href="/assets/images/icon.png" />
    <link href="https://fonts.googleapis.com/css?family=Raleway|Roboto" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" />
    <style>
        .cart-container {
            padding-top: 50px;
            padding-bottom: 50px;
        }

        .cart-item-img {
            max-width: 80px;
            border-radius: 5px;
        }

        .quantity-btn {
            padding: 0 10px;
            font-weight: bold;
        }

        .cart-total-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>

<body>
    <!-- Simplified Navbar for Cart -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3">
        <div class="container">
            <a class="navbar-brand text-primary" href="/">
                <i class="fa fa-pagelines" aria-hidden="true"></i> &nbsp;Arshit Traders
            </a>
            <div class="ml-auto">
                <a href="/" class="btn btn-outline-primary">Continue Shopping</a>
            </div>
        </div>
    </nav>

    <div class="container cart-container">
        <h2 class="mb-4">Shopping Cart</h2>

        <% if (cart.length===0) { %>
            <div class="text-center py-5">
                <i class="fa fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h3>Your cart is empty</h3>
                <p>Looks like you haven't added anything to your cart yet.</p>
                <a href="/" class="btn btn-primary mt-3">Start Shopping</a>
            </div>
            <% } else { %>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cart.forEach(item=> { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= item.image %>" alt="<%= item.name %>"
                                                        class="cart-item-img mr-3">
                                                    <span class="font-weight-bold">
                                                        <%= item.name %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>₹<%= item.price %>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <form action="/cart/update" method="POST" class="mr-1">
                                                        <input type="hidden" name="productId"
                                                            value="<%= item.productId %>">
                                                        <input type="hidden" name="action" value="dec">
                                                        <button type="submit"
                                                            class="btn btn-sm btn-light border">-</button>
                                                    </form>
                                                    <span class="mx-2 px-2 border rounded bg-white">
                                                        <%= item.quantity %>
                                                    </span>
                                                    <form action="/cart/update" method="POST">
                                                        <input type="hidden" name="productId"
                                                            value="<%= item.productId %>">
                                                        <input type="hidden" name="action" value="inc">
                                                        <button type="submit"
                                                            class="btn btn-sm btn-light border">+</button>
                                                    </form>
                                                </div>
                                            </td>
                                            <td class="font-weight-bold">₹<%= (item.price * item.quantity).toFixed(2) %>
                                            </td>
                                            <td>
                                                <form action="/cart/remove/<%= item.productId %>" method="POST">
                                                    <button type="submit" class="btn btn-sm text-danger" title="Remove">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="cart-total-section shadow-sm">
                            <h4 class="border-bottom pb-3">Order Summary</h4>
                            <div class="d-flex justify-content-between my-3">
                                <span>Subtotal</span>
                                <span>₹<%= total.toFixed(2) %></span>
                            </div>
                            <div class="d-flex justify-content-between my-3">
                                <span>Shipping</span>
                                <span class="text-success">Free</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between my-3 font-weight-bold h5">
                                <span>Total</span>
                                <span class="text-primary">₹<%= total.toFixed(2) %></span>
                            </div>
                            <a href="/cart/checkout" class="btn btn-primary btn-block btn-lg mt-4 shadow">
                                Proceed to Checkout
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2026 Arshit Traders. Built with Express and Mongoose.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>